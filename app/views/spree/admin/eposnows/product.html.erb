<% content_for :page_title do %>
  <%= link_to Spree.t(:products), products_admin_eposnow_path %> /
  <%= @product['Name'] %>
<% end %>

<div class='row'>

  <div class="col-md-6">
    <table class='table'>
      <% @product.each do |key, value| %>
        <tr>
          <th>
            <%= key %>
          </th>
          <td>
            <%= value %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

</div>